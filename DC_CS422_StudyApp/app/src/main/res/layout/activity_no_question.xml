<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".activity.NoQuestionActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no_question_back"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="quitStudying"/>

    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/media" />

    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/prohibit"
        android:id="@+id/prohibit"
        android:onClick="mediaPlay"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no_question_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_question_back"
        android:text="No questions here..."
        android:textAlignment="center"
        android:textSize="35sp"
        android:layout_marginVertical="50dp"/>

    <ImageView
        android:layout_width="315dp"
        android:layout_height="379dp"
        android:id="@+id/no_question_pic"
        android:src="@drawable/what"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_question_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_question_pic"
        android:text="Come back once youâ€™ve bookmarked some questions!!"
        android:textAlignment="center"
        android:textSize="25sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>